@page
@model TODOLIST.Pages.Lists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.tasksCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.tasksCount)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.List.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<div>
    <p>
        <a asp-page="./Tasks/Create" asp-route-id="@Model.List.Id">Create New Task</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.List.tasks[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List.tasks[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List.tasks[0].CreationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List.tasks[0].EndDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List.tasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-page="./Tasks/Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Tasks/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

